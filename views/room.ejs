</head>

<body>

    <div class="main">
        <div class="main__left">


            <div class="main__videos">
                
                <div id="video-gride"></div>
            </div>


            <div class="main__controlls">
                <div class="main__controlls__blocks">
                    <div onclick="muteUNmute()" class="main__controlls__button main_mute_button">
                        <i class="fas fa-microphone"></i>
                        <span>mute</span>
                    </div>
                    <div onclick="playStop()" class="main__controlls__button main_video_button">
                        <i class="fas  fa-video"></i>
                        <span>stop video</span>
                    </div>
                </div>
                <div class="main__controlls__blocks">
                    <div class="main__controlls__button">
                        <i class="fa-solid fa-shield-halved"></i>
                        <span>security</span>
                    </div>
                    <div class="main__controlls__button">
                        <i class="fas  fa-user-friends"></i>
                        <span>particepands</span>
                    </div>
                    <div class="main__controlls__button">
                        <i class="fas  fa-comment-alt"></i>
                        <span>chat</span>
                    </div>
                </div>
                <div class="main__controlls__blocks">
                    <div class="main__controlls__button">
                        <span class="leave_meeting">leave meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main__right">
            <div class="main__header">
                <h2>HACKER CHAT</h2>
            </div>
            <div class="main_chat_window">
                <ul class="messages">

                </ul>
            </div>
            <div class="main_messgae_contanier">
                <input id="chat_messages" type="text" placeholder="type message here...">
            </div>
        </div>
    </div>
    <script src="script.js">
    </script>
